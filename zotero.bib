	keywords = {Astrophysics},
	file = {arXiv.org Snapshot:C:\Users\User\AppData\Roaming\Zotero\Zotero\Profiles\1lsc8c6m.default\zotero\storage\WI8J4MAF\Kormendy and Kennicutt Jr - 2004 - Secular Evolution and the Formation of Pseudobulge.html:text/html;astro-ph/0407343 PDF:C:\Users\User\AppData\Roaming\Zotero\Zotero\Profiles\1lsc8c6m.default\zotero\storage\C558BW4F\Kormendy and Kennicutt Jr - 2004 - Secular Evolution and the Formation of Pseudobulge.pdf:application/pdf}
